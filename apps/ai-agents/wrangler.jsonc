{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "ai-agents",
  "main": "src/worker.ts",
  "compatibility_date": "2025-10-26",
  "observability": {
    "enabled": true
  },
  
  // Container configuration
  "containers": [
    {
      "max_instances": 5,
      "class_name": "AIAgentsContainer",
      "image": "./Dockerfile",
      "image_build_context": "../.."
    }
  ],
  
  // Durable Object bindings
  "durable_objects": {
    "bindings": [
      {
        "name": "AI_AGENTS_CONTAINER",
        "class_name": "AIAgentsContainer"
      }
    ]
  },
  
  // Migrations for Durable Objects
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": ["AIAgentsContainer"]
    }
  ]
  
  // Required secrets (set with: pnpm wrangler secret put <SECRET_NAME>):
  // - OPENAI_API_KEY
  // - ELEVENLABS_API_KEY
  // - ELEVENLABS_AGENT_ID
  // - ELEVENLABS_PHONE_NUMBER_ID
  // - CLOUDFLARE_API_URL
  // - SCHOOL_NAME (optional)
}
